<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="230.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.tegevusteplaneerija.client.EventDialogController">
   <center>
      <VBox prefHeight="200.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label text="Event Title:">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin></Label>
                  <Region minHeight="-Infinity" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="titleField"/>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" top="10.0" />
               </VBox.margin></HBox>
            <HBox layoutX="10.0" layoutY="20.0">
               <children>
                  <Label text="Description">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <Region minHeight="-Infinity" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="descField"/>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
            <HBox layoutX="10.0" layoutY="66.0">
               <children>
                  <Label text="Start Time:">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <Region minHeight="-Infinity" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="startField"/>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
            <HBox layoutX="10.0" layoutY="92.0">
               <children>
                  <Label text="End Time:">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
                  <Region minHeight="-Infinity" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="endField"/>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" text="Cancel" fx:id="cancelButton" onAction="#cancel">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" text="OK" fx:id="okButton" onAction="#ok">
                     <HBox.margin>
                        <Insets right="10.0" />
                     </HBox.margin>
                  </Button>
               </children></HBox>
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
</BorderPane>
